<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Coin Flip</title>
  
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Coin Flip</h1>
 
  <ul class="messages">
  <% for(var i=0; i<flipR.length; i++) {%>
    <li class="message">
      <span><%= flipR[i].userFlip %></span>
      <span><%= flipR[i].result %></span>
      <span><%= flipR[i].winOrLose %></span>
      <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>-->
      <span><i class="fa fa-trash" aria-hidden="true"></i></span> 
    </li>
  <% } %>
  </ul>

  <h2>Choose Heads or Tails</h2> 

  <form action="/yourFlip" method="POST">
    <input type="text" placeholder="name" name="userFlip">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
